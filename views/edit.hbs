<div class="container py-5">

  <div class="row">
    <div class="col-12 col-lg-10 col-xl-8 mx-auto">
      <div class="card">
        <div class="card-body">
          <form method="POST" action="/expenses/{{ recordData._id }}?_method=PUT">
            <div class="row mb-3 g-2">
              <label class="col-md-4">
                <p class="d-inline">* 必填欄位</p>
              </label>
              <div class="mt-3 d-grid gap-2 col-6 mx-auto">
                 <h5 class="d-inline">請修改你的支出</h5>
              </div>
            </div>
            <hr>
            <div class="row g-2 mb-3">
              <label for="name" class="col-md-4 col-form-label">
                名稱 *
              </label>
              <div class="col-md-8">
                <input type="text" name="name" class="form-control" id="name" value="{{ recordData.name }}" required>
                <div class="valid-feedback"></div>
                <div class="invalid-feedback"></div>
              </div>
            </div>

            <div class="row g-2 mb-3">
              <label for="date" class="col-md-4 col-form-label">
                日期 *
              </label>
              <div class="col-md-8">
                <input type="date" name="date" class="form-control" id="date" value="{{ recordData.date }}" required>
              </div>
            </div>

            <div class="row g-2 mb-3">
              <label for="categoryId" class="col-md-4 col-form-label">
                類別 *
              </label>
              <div class="col-md-8">
                <select name="categoryId" class="form-select form-control" aria-label="Default select example"  id="categoryId" required>
                  <option value="" disabled>Select</option>
                  {{#each categoryData}}
                    <option value="{{ this._id }}" {{#if this.isSelected }} selected {{/if}}>{{ this.name }}</option>
                  {{/each}}
                </select>
              </div>
            </div>

            <div class="row mb-3 g-2">
              <label for="amount" class="col-md-4 col-form-label">
                金額 *
              </label>
              <div class="col-md-8">
                <input type="number" name="amount" class="form-control" id="amount" value="{{ recordData.amount }}" required>
              </div>
            </div>
            <hr>
            <!-- submit button -->
            <div class="row mb-3 g-2">
              <label class="col-md-4">
              </label>
              <div class="mt-3 d-grid gap-2 col-6 mx-auto">
                <button class="btn btn-success" type="submit">送出</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>